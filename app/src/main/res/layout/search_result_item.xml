<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchResult"
            type="com.sarthak.jiolocal.dao.SearchResultDao" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jio_type_medium"
            android:text="@{searchResult.title}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@{searchResult.category}"
            android:fontFamily="@font/jio_type_medium"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:alpha="0.55"
            app:layout_constraintTop_toBottomOf="@id/service_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>